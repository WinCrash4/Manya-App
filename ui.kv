#:import threading threading

<ManagerScreens@ScreenManager>:

    MenuScreen:
        id: men
    ScrollScreen:
        id: main_screen


<MenuScreen@Screen>:
    name: "menu"

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tap to start"
            on_press: app.screen_manager.current = 'main_screen'
<ScrollScreen>
    name: "main_screen"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: (1, 0.1)
            orientation: 'horizontal'
            ScrollButton:
                id: trash
                text: 'Start'
                on_press: root.start_thread(); self.disabled = True
        ScrollView:
            size_hint: 1, 1
                
            pos_hint: {'center_x': .5, 'center_y': .5}

            GridLayout:
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                id: container
                cols: 1
                padding: 10
                spacing: 10
                height: sum(x.height+10 for x in self.children) + 96
                size_hint: 1, None
                do_scroll_x: False

<UserTextLabel>
    size_hint: 1, None
    size: self.texture_size

    canvas.before:
        Color:
            rgba: 0.6, 0.33, 0.9, 0.7
        Rectangle:
            pos: self.pos
            size: self.size

    padding: 8, 4

    text_size: self.width, None
    
    halign: 'right'
    valign: 'middle'

<AnswerTextLabel>
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    
    canvas.before:
        Color:
            rgba: 0.82, 0.82, 0.82, 0.7
        Rectangle:
            pos: self.pos
            size: self.size

    color: 0, 0, 0, 1
    padding: 8, 4