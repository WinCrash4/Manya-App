#:import threading threading

<ManagerScreens@ScreenManager>:

    MenuScreen:
        id: men
    ScrollScreen:
        id: main_screen
    SettingsScreen:
        id: settings_screen


<MenuScreen@Screen>:
    name: "menu"

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tap to start"
            on_press: app.screen_manager.current = 'main_screen'

<ScrollScreen>
    name: "main_screen"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Manya"
            elevation: 10
            left_action_items: [["settings", lambda x: app.change_screen('settings_screen')]]
            right_action_items: [["play" if not root.threadRunning else "help", lambda x: root.start_thread() if not root.threadRunning else root.get_help()]]
        # BoxLayout:
        #     size_hint: (1, 0.1)
        #     orientation: 'horizontal'
        #     ScrollButton:
        #         id: trash
        #         text: 'Start'
        #         on_press: root.start_thread(); self.disabled = True
        ScrollView:
            size_hint: 1, 1
                
            pos_hint: {'center_x': .5, 'center_y': .5}

            GridLayout:
                id: container
                cols: 1
                padding: 10
                spacing: 10
                height: self.minimum_height#sum(x.height+10 for x in self.children) + 96
                size_hint: 1, None
                do_scroll_x: False

<SettingsScreen>
    name: 'settings_screen'
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        MDToolbar:
            title: "Settings"
            elevation: 10
            left_action_items: [["keyboard-backspace", lambda x: app.change_screen('main_screen')]]

        ScrollView:
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .55}

            GridLayout:
                cols: 1
                padding: 4
                spacing: 4
                height: self.minimum_height#sum(x.height+10 for x in self.children) + 96
                size_hint: 1, None
                do_scroll_x: False

                FloatLayout:
                    SettingsItem:
                        text: 'Hello'
                        Button:
                            size_hint: (1, None)
                            pos_hint: {"x":1, "y":1}
                            height: 32
                            text: 'Load'
                            on_press: root.show_load()

<SettingsItem>:
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    

    color: 0, 0, 0, 1
    padding: 8, 4

<PopupContent>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ScrollView:
        size_hint: 1, 0.85
        pos_hint: {'center_x': .5, 'center_y': .5}

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            GridLayout:
                id: content
                cols: 1
                padding: 0
                spacing: 0
                height: self.minimum_height#sum(x.height+10 for x in self.children) + 96
                size_hint: 1, None
                do_scroll_x: False

            BoxLayout:
                orientation: 'vertical'
                id: info
                height: self.minimum_height
                size_hint: 1, None

    # Button:
    #     id: close
    #     text: "OK"
    #     size_hint: 0.8, 0.15
    #     pos_hint: {"x":0.01, "y":0.01}

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                id: closeBtn
                text: "Cancel"

            Button:
                id: loadBtn
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<UserTextLabel>
    size_hint: 1, None
    text_size: self.width, None
    size: self.texture_size

    canvas.before:
        Color:
            rgba: 0.6, 0.33, 0.9, 0.7
        Rectangle:
            pos: self.pos
            size: self.size

    padding: 8, 4
    halign: 'right'
    valign: 'middle'

<AnswerTextLabel>
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    
    canvas.before:
        Color:
            rgba: 0.82, 0.82, 0.82, 0.7
        Rectangle:
            pos: self.pos
            size: self.size

    color: 0, 0, 0, 1
    padding: 8, 4

<PlainTextLabel>:
    size_hint: 1, None
    text_size: root.width, None
    size: self.texture_size
    valign: 'middle'
    halign: 'center'

    color: 0, 0, 0, 1
    padding: 8, 4
